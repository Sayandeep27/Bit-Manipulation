class Solution {
public:
    bool isPowerOfFour(int n) {
       
       return (n>0) and ((n&(n-1))==0) and (n%3==1); 
    }
};


---------------------------------------------------------------------------------------------------------------------------------------------------------------------

bool isPowerOfFour(int n) {

    if(n<=0) return false;
    
    while(n%4==0)
    {
        n=n/4;
    }
    
    if(n==1) return true;
    
    
    return false;
}
