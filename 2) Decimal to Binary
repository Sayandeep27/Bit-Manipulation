void toBinary(int n)
{
    int i=0;
    int ans=0;
    
    while(n!=0)
    {
        int bit=(n&1);
        
        ans+=(bit*pow(10,i));
        
        n=n/2;
        i++;
        
    }
    
    cout<<ans<<endl;
    
}


----------------------------------------------------------------------------------------------------------------------------------------------------------------


void toBinary(int n)
{
    
    if(n>0)
    {
        toBinary(n/2);
        cout<<(n%2);
    }
    
}



